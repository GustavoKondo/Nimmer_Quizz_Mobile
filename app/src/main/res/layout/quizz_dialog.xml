<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="14dp">
    <TextView
        android:id="@+id/classes_dialog_txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Cadastrar Quizz"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        />
    <EditText
        android:id="@+id/classes_dialog_edit_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint=" Digite o nome do Quizz"
        android:inputType="text"
        />
    <EditText
        android:id="@+id/classes_dialog_edit_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint=" Digite a descrição"
        android:inputType="text"
        />
    <Button
        android:id="@+id/save_dialog_btn"
        android:backgroundTint="@color/colorPrimary"
        android:text="Criar"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>