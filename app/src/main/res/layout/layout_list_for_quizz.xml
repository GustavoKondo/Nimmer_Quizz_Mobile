<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    android:layout_marginBottom="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp">

        <ImageView
            android:id="@+id/cover_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="37dp"
            android:src="@drawable/team"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nome do quizz"
            android:layout_marginTop="10dp"
            android:layout_marginStart="40dp"
            android:layout_toEndOf="@id/cover_image"
            android:id="@+id/quizz_text_view"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="description do quizz"
            android:layout_marginTop="10dp"
            android:layout_marginStart="40dp"
            android:layout_toEndOf="@id/cover_image"
            android:layout_below="@id/quizz_text_view"
            android:id="@+id/quizz_description_view"
            android:textStyle="bold"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>